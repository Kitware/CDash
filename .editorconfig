root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.js]
indent_size = 2

[*.json]
indent_size = 2

[*.html]
indent_size = 2

[*.log]
trim_trailing_whitespace = false

[*.markdown]
trim_trailing_whitespace = false

[*.md]
trim_trailing_whitespace = false

[*.yaml]
indent_size = 2

[*.yml]
indent_size = 2
